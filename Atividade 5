algoritmo "PreenchimentoVetorPares"
var
   vetor: vetor[1..50] de inteiro
   i, valor: inteiro
inicio
   i <- 1
   valor <- 0
   
   enquanto i <= 50 faca {
      vetor[i] <- valor
      valor <- valor + 2
      i <- i + 1
   }
   
   // Exibindo o vetor preenchido
   i <- 1
   enquanto i <= 50 faca {
      escreval("Posição ", i, ": ", vetor[i])
      i <- i + 1
   }
}
fimalgoritmo
